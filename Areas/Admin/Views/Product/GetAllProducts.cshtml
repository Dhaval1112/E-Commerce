@model IEnumerable<ProductModel>

<script>

    function deleteFunction(str, product) {
        let text = "Wourl you like to delete " + product;
        if (confirm(text) == true) {
            text = "You pressed OK!";
            window.location.href = str;
        } else {
            text = "You canceled!";
        }

    }

    function editFunction(str, product) {
        let text = "Wourl you like to Edit " + product;
        if (confirm(text) == true) {
            text = "You pressed OK!";
            window.location.href = str;
        } else {
            text = "You canceled!";
        }

    }

    function deletedata() {
        alert("Get called")
    }
</script>



<h3 class="py-3">All products</h3>

@if (TempData["IsDeleted"] != null)
{
    if (TempData["IsDeleted"].ToString() == "Success")
    {

        <div class="alert alert-success d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>

            Product deleted Successfully done..!
            <div class="me-auto">
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#check-circle-fill" /></svg>
            Something went wrong while uploading category so try again..!
            <div class="me-auto">
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    //ViewBag.IsSuccess = false;
}

@if (Model.Count() > 0)
{

    <table class="table  table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Stock</th>
                <th scope="col">Price</th>
                <th scope="col">Saler</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in Model)
            {
                <tr class="align-middle">

                    <th scope="row">@product.Id</th>
                    <td class="text-center"><img src="@product.CoverImageUrl" height="50" width="50" /></td>
                    <td>@product.ProductName</td>
                    <td>@product.Stock</td>
                    <td>@product.Price</td>
                    <td>@product.SalerName</td>
                    <td>

                        <button class="btn btn-info btn-sm" onclick="editFunction('@Url.Action("EditProduct","Product", new { Id= product.Id })', '@product.ProductName')">Edit</button> |
                        <button class="btn btn-danger btn-sm" onclick="deleteFunction('@Url.Action("DeleteProduct","Product", new { Id= product.Id })', '@product.ProductName')">Delete</button>

                        @*<a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" >Delete</a>*@
                    </td>


                </tr>
            }




        </tbody>
    </table>
}
else
{
    <h4>No elements found</h4>
}


