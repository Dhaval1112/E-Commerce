@model IEnumerable<CategoryModel>;



<script>

    function deleteFunction(str, category) {
        let text = "Wourl you like to delete " + category;
        if (confirm(text) == true) {
            text = "You pressed OK!";
            window.location.href = str;
        } else {
            text = "You canceled!";
        }

    }

    function editFunction(str, product) {
        let text = "Wourl you like to Edit " + product;
        if (confirm(text) == true) {
            text = "You pressed OK!";
            window.location.href = str;
        } else {
            text = "You canceled!";
        }

    }

    function deletedata() {
