@model List<CartModel>

@{ 
    var TotalPrice = 0;
    int total = 0;
    var GrandTotal = 0;
    var GrandDiscount = 0;
}
<style>
    .cartListImageDiv{
        max-height:11rem;
        max-width:6rem;

@*        max-height:2rem;
        max-width:1.5rem;*@
    }
    .productName, .productSaler {
        line-height: 18px;
    }
    .productSaler{
        font-size:1rem;
        color:dimgray;
    }

    .productQuantity{
        line-height:18px;
    }

    .wdtotal{
        color:darkgray;
    }

    .cartDiscount{
        font-size:15px;
        opacity:0.8;
    }
    .placeOrderButton{
        background-color:darkorange;
        border-color:darkorange;
        border-radius:unset;
        margin-bottom:1rem;
       
    }
    .sidebarTextSize{
        font-size:10px;
    }
</style>

<div class="container  border shadow-sm">
    <div class="row flex-row p-2">
        <div class="col-md-8 order-2 order-lg-1 bg-light">
            <div class="card">
                <div class="card-header">
                    <h4>Cart items(@Model.Count)</h4>
                </div>
                <div class="card-body">

                    @foreach (var item in Model)
                    {

                        <div class="mb-2 row border p-2">
                            <div class="col-3 col-sm-3 col-md-3 col-lg-2">

                                <div class="cartListImageDiv border p-2">
                                    <img class="img-fluid cartImage" src="@item.ProductCoverImageUrl" alt="Alternate Text" />
                                </div>
                            </div>

                            @*7 in*@
                            <div class="col-7 bg-light">
                                <p class="fs-5 productName">
                                    @item.ProductName
                                </p>
                                <p class="productSaler">Saler name: @item.ProductSaler</p>

                                @if (item.ProductDiscount > 0)
                                {
                                    total = Convert.ToInt32(item.Price * item.Quantity);
                                    var discount= (total * item.ProductDiscount)/100;
                                    TotalPrice = Convert.ToInt32(total - discount);
                                    GrandTotal += TotalPrice;
                                    GrandDiscount += discount;

                                    <div>

                                        <span class="fw-bold  me-1">₹@TotalPrice</span> <span class="wdtotal"><strike> ₹@total</strike></span> <span class="cartDiscount fw-bold text-success">@item.ProductDiscount% off</span>
                                    </div>
                                }

                                <div class="mt-2">

                                    <span class="fw-bold productQuantity me-2">Quantity: @item.Quantity</span>
                                    <a class="fs-6 text-uppercase text-decoration-none" asp-controller="Home" asp-action="Index">Remove</a>
                                </div>
                            </div>
                            @*3 in*@
                            <div class="col-3">
                                @{
                                    var currentDate = DateTime.Now;
                                    //item.Date = item.Date.AddDays();
                                    var difference = currentDate - item.Date;

                                        @*<p>
                                            @difference.Days
                                            @item.Date
                                            @item.Date.DayOfWeek
                                        </p>*@
                                    <p class="text-secondary text-center">
                                        @if (difference.Days > 7)
                                        {
                                                
                                            @item.Date.ToString("dd MMM yyyy")

                                        }
                                        else
                                        {

                                            @item.Date.DayOfWeek
                                        }
                                    </p>
                                }
                                
                            </div>

                        </div>
                   

                    }
                </div>

@*                <div class="card-footer d-flex">
                    <h4 class="me-auto">Cart footer</h4>
                    <button class="btn btn-primary -end">
                        Place Order
                    </button>
                </div>*@
            </div>
        </div>

@*        <div class="col-md-4 ">*@
        <div class="col-lg-4 col-md-8 order-1 order-lg-2 mb-3">
            <div class="border">
                <h4 class="p-2 text-uppercase text-secondary mt-2">Price Details</h4>
                <hr />
                <div class="px-5 mb-3 ">
                    <span class="me-auto ">
                        Price Details (@Model.Count)
                    </span> 
                    <span class="float-end  ">
                        ₹ @GrandTotal

                    </span>
                    
                </div>
                <div class="px-5 mb-3">
                    <span class="me-auto">
                        Total savings 
                    </span> 
                    <span class="float-end text-success">
                        ₹ @GrandDiscount

                    </span>
                    
                </div>
                <div>

                    <hr style="border: 1px dashed #C0C0C0" class="mx-3"/>
                        <div class="px-5">

                            <span class="fw-bold">Total Amount</span>
                            <span class="fw-bold float-end">₹@GrandTotal</span>
                        </div>
                    <hr style="border: 1px dashed #C0C0C0" class="mx-3"/>

                    <div class="row px-4" >
                        <a class="btn btn-danger text-uppercase fw-bold d-block placeOrderButton" >Place your order</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>