@model E_Commerce.Models.SignUpUserModel

@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body class="container bg-light">

    @*These are for alert icons*@
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </symbol>
        <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
        </symbol>
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </symbol>
    </svg>


    <div class="row p-5">
        @if (ViewBag.isSuccess == true)
        {
            <div class="alert alert-success d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                <div class="me-auto">
                    You have signUp successfully done
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="col-md-5 bg-black p-lg-4 d-grid align-items-center " style="min-height: 90vh; background: linear-gradient(45deg,#0288d1,#26c6da) !important; border-radius:10px;" >
            <form asp-action="SignUp" class="card p-4 shadow-sm mt-4 ">

                <h3 class="text-center" >Signup </h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <div class="form-floating mb-2">
                        <input asp-for="FirstName" class="form-control" placeholder="Name here" />
                        <label asp-for="FirstName" class="control-label is-invalid"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <br />

                <div class="form-floating mb-2">
                    <input asp-for="LastName" class="form-control" placeholder="Name here" />
                    <label asp-for="LastName" class="control-label is-invalid"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <br />

                <div class="form-floating mb-2">
                    <input asp-for="MobileNumber" class="form-control" placeholder="Name here" />
                    <label asp-for="MobileNumber" class="control-label is-invalid"></label>
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>
                <br />

                <div class="form-floating mb-2">
                    <input asp-for="Email" class="form-control" placeholder="Name here" />
                    <label asp-for="Email" class="control-label is-invalid"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />

                @*


        <div class="form-group">
            <label asp-for="Gender"></label>


            <div class="form-check">
                <input type="radio" class="form-check-input" id="Male" asp-for="Gender" value="Male" />

                <label class="form-check-label" for="Male">
                    Male
                </label>
            </div>

            <div class="form-check">
                <input type="radio" class="form-check-input" id="Female" asp-for="Gender" value="Female" />

                <label class="form-check-label" for="Female">
                    Female
                </label>
            </div>

            <div class="form-check">
                <input type="radio" class="form-check-input" id="Others" asp-for="Gender" value="Female" />

                <label class="form-check-label" for="Others">
                    Others
                </label>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateOfBirth" class="control-label"></label>
            <input asp-for="DateOfBirth" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

                *@


            <div class="form-floating mb-2">
                <input asp-for="Password" class="form-control" placeholder="Name here" />
                <label asp-for="Password" class="control-label is-invalid"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                <br />

                <div class="form-floating mb-2">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Name here" />
                    <label asp-for="ConfirmPassword" class="control-label is-invalid"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <br />

                <div class="form-group d-grid">
                    <input type="submit" value="Sign Up" class="btn btn-primary" />
                    <div class="mt-2">
                        <a asp-action="Index" asp-controller="Home" class="text-decoration-none text-secondary">Back to home page</a>
                        <a asp-action="Login" asp-controller="Account" class="float-end text-decoration-none text-secondary">Go to login page</a>
                    </div>
                </div>
            </form>
            <br />
        </div>


        <div class="col-md-7 d-none d-md-flex align-items-center bg-white" style="min-height:90vh; " >
            <img src="~/img/signUpEcommerce.png" class="img-fluid" />
        </div>
    </div>

    
    <script src="~/bootstrap/js/bootstrap.min.js"></script>

</body>
</html>
